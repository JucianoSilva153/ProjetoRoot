{
    public string? StringPostId { get; set; }
    public LoginListUserDto CurrentUser { get; set; } = new LoginListUserDto { User = new ListUserDto(), Token = "" };
    bool IsLoggedIn = false;
    bool IsClient => CurrentUser.User.Type == UserType.Client;
    
    private string ImageDataUrl(string image) =>
        string.IsNullOrEmpty(image) ? "img/noImage.png" : $"data:image/png;base64,{image}";

    public ListPostDto? CurrentPost { get; set; }

    private async void AtualizarParametro()
    {
        StringPostId = RouteService.Parametro;
        if (!string.IsNullOrEmpty(StringPostId))
            CurrentPost = await posts.GetPostByIdAsync(new Guid(StringPostId));
        await InvokeAsync(StateHasChanged);
    }

    protected override async Task OnInitializedAsync()
    {
        RouteService.OnChange += AtualizarParametro;
        StringPostId = RouteService.Parametro;

        StateHasChanged();
        var currentUser = await LocalStorage.GetItemAsync("currentUser");
        if (currentUser is null)
        {
            IsLoggedIn = false;
            return;
        }

        IsLoggedIn = true;
        CurrentUser = JsonSerializer.Deserialize<LoginListUserDto>(currentUser) ?? new LoginListUserDto();
    }

    public void Dispose()
    {
        RouteService.OnChange -= AtualizarParametro;
    }
}